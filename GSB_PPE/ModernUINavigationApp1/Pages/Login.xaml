<UserControl x:Class="ModernUINavigationApp1.Pages.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Connexion :" Style="{StaticResource Heading2}" />
                <TextBlock TextWrapping="Wrap" Text="E-mail :"/>
                <TextBox x:Name="mailTxtBox">guillaume.brunel@swiss-galaxy.com</TextBox>
                
                <TextBlock TextWrapping="Wrap" Text="Mot de passe :"/>
                <PasswordBox x:Name="passwordTxtBox"></PasswordBox>

                <Button Click="Connect_Click">Se connecter</Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
